{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "composite": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "downlevelIteration": true,
    "declarationMap": true,
  },
  "include": [
    "src",
    "*/.ts",
    "*/.tsx",
    "vite.config.ts"
  ],
  "exclude": [
    "node_modules",
    "**/node_modules/*",
    "dist",
    "**/dist/*",
    "*.scss"
  ]
}
